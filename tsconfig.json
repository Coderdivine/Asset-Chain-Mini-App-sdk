{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "ESNext",                      // Changed to ESNext for modern module compatibility
    "moduleResolution": "Bundler",           // Keep this for bundler resolution
    "target": "ES2022",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist",                        // Output directory for compiled files
    "noEmit": false,                         // Allow emitting compiled files
    "jsx": "react-jsx",                      // Set to react-jsx for React 17+ JSX support
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src", 
    "next-env.d.ts", 
    "**/*.ts", 
    "**/*.tsx", 
    ".next/types/**/*.ts", 
    "src/context/provider.tsx"
  ],
  "exclude": ["node_modules"]
}
